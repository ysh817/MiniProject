		FROM BOARD_CONTENT 
		WHERE title LIKE CONCAT('%',#{searchKeyword},'%') 
		ORDER BY CNT DESC
	</select> -->
	<select id="getBoardList"  resultType="BoardContent">
		SELECT * 
		FROM BOARD_CONTENT 
		ORDER BY CNT DESC
	</select>
	<select id="getBoardListPage"  resultType="BoardContent">
		SELECT * 
		FROM BOARD_CONTENT 
		<where>
		<if test="">
		
		
		</if>
		</where>
		ORDER BY CNT DESC
	</select>

	<select id="getBoardCount" resultType="int">
		SELECT COUNT(*) CNT
		FROM BOARD_CONTENT 
		<!-- WHERE title LIKE CONCAT('%',#{searchKeyword},'%')  -->
	</select>

		<!-- cnt를 +1 해주기 위한 쿼리
		 칼럼갯수를 갖고와서 +1 //0은 존재하지 않게
		  -->
	<select id="getMaxCnt"  resultType="Integer">
		SELECT IFNULL(MAX(CNT),0) AS CNT
		FROM BOARD_CONTENT 
	</select>
	<select id="checkEqualCnt"  parameterType="int" resultType="int">
		SELECT COUNT(*)CNT
		FROM BOARD_CONTENT 
		WHERE CNT=#{cnt}
	</select>
	<update id="updateHits" parameterType="BoardContent" ><!-- 수정 -->
		UPDATE BOARD_CONTENT 
		SET HIT=HIT+1 
		WHERE CNT=#{cnt}	
	</update>


</mapper>
	