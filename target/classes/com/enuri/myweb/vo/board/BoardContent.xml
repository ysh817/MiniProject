<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN" "http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">

<mapper namespace="BoardContent">
	<resultMap type="com.enuri.myweb.vo.board.BoardContent" id="BoardContentMap">

		<result property="title" column="TITLE" />
		<result property="writer" column="USER_ID" />
		<result property="content" column="CONTENT" />
		<result property="regdate" column="REGDATE" />
		<result property="cnt" column="CNT" />

	</resultMap>

	<!-- <![CDATA[ ]]> -->
<!-- 	
	
	<select id="mainBoardList" parameterType="HashMap" resultType="HashMap">
		SELECT * 
		FROM BOARD_CONTENT 
		WHERE title LIKE CONCAT('%',#{searchKeyword},'%') 
		ORDER BY CNT DESC
	</select>
	
	
	 -->
	 

	 

	<insert id="insertBoard" parameterType="BoardContent">
		INSERT INTO BOARD_CONTENT
		( CNT, TITLE,USER_ID,CONTENT, REGDATE )
		VALUES
		( #{cnt}, #{title},#{writer},#{content},#{regdate} )
		<!-- SELECT case COUNT(*) when 0 then 1 else max(CNT)+1 
		,#{title},#{writer},#{content},#{regdate} FROM BOARD_CONTENT 
 -->

	</insert>
	

	<!-- cnt를 +1 해주기 위한 쿼리
		 칼럼갯수를 갖고와서 +1 //0은 존재하지 않게
		  -->
	
	
	
	
	
	
	<update id="updateBoard">
		UPDATE BOARD_CONTENT 
		SET title=#{title}, content=#{content} 
		
	</update>
	<delete id="deleteBoard" parameterType="int">
		DELETE FROM BOARD_CONTENT 
		WHERE CNT=#{cnt}
	</delete>
	<select id="readBoard" parameterType="int" resultType="BoardContent">
		SELECT * 
		FROM BOARD_CONTENT 
		WHERE CNT=#{cnt}
	</select>
	<select id="getBoardList" resultType="BoardContent">
		SELECT CNT, TITLE, USER_ID, REGDATE 
		FROM BOARD_CONTENT 
		<!-- WHERE title LIKE CONCAT('%',#{searchKeyword},'%')  -->
		ORDER BY CNT DESC
	</select>
	
	<select id="getBoardCount" resultType="int">
		SELECT COUNT(*) CNT
		FROM BOARD_CONTENT 
		<!-- WHERE title LIKE CONCAT('%',#{searchKeyword},'%')  -->
	</select>
		<!-- cnt를 +1 해주기 위한 쿼리
		 칼럼갯수를 갖고와서 +1 //0은 존재하지 않게
		  -->
	
	
	
	

</mapper>
	