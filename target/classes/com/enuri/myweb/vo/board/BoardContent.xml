		FROM BOARD_CONTENT 
		WHERE title LIKE CONCAT('%',#{searchKeyword},'%') 
		ORDER BY CNT DESC
	</select>
	
	
	 -->
	 

	
	<insert id="insertBoard" parameterType="BoardContent">
		INSERT INTO BOARD_CONTENT
		( TITLE, USER_ID,CONTENT,REGDATE,CNT,HIT,RECNT )
		VALUES
		( #{title},#{user_id},#{content},#{regdate},#{cnt},#{hit},#{recnt})
		<!-- SELECT case COUNT(*) when 0 then 1 else max(CNT)+1 
		,#{title},#{writer},#{content},#{regdate} FROM BOARD_CONTENT 
 -->

	</insert>
	


	<!-- cnt를 +1 해주기 위한 쿼리
		 칼럼갯수를 갖고와서 +1 //0은 존재하지 않게
		  -->
	<select id="getContentWriter" resultType="String">
	<!-- 글 번호로 해당하는 유저 정보 가지고옴 1-->
		SELECT USER_ID
		FROM BOARD_CONTENT 
		WHERE CNT=#{cnt}
	</select>
	
	<select id="getContentUserInfo" resultType="BoardContent">
	<!-- 글쓴 유저의 정보2 -->
		SELECT USER_ID,USER_PW,USER_NAME,USER_EMAIL,USER_GENDER
		FROM BOARD_CONTENT A, USER_INFO B
		WHERE USER_ID=#{user_id}
	</select>
	
	

	<update id="updateBoard" parameterType="BoardContent" ><!-- 수정 -->
		UPDATE BOARD_CONTENT 
		SET TITLE=#{title}, CONTENT=#{content} 
		WHERE CNT=#{cnt}
		
	</update>
	<delete id="deleteBoard" parameterType="int" >
		DELETE FROM BOARD_CONTENT 
		WHERE CNT=#{cnt}
	</delete>
	
	<select id="readBoard" parameterType="int" resultType="BoardContent">
		SELECT * 
		FROM BOARD_CONTENT 
		WHERE CNT=#{cnt}
	</select>
	
